<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane style="-fx-background-image: url(&quot;mcbg.jpg&quot;);" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WinScreenGUI">
    <left>
        <Label text="LeaderBoard:" BorderPane.alignment="CENTER" textFill="WHITE">
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </Label>
    </left>
    <center>
        <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" fx:id="leaderBoard"/>
    </center>
    <bottom>
        <Button mnemonicParsing="false" text="Return To Menu" BorderPane.alignment="CENTER" onAction="#mainMenuButtonAction">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Button>
    </bottom>
    <top>
        <Label fx:id="playerWin" text="Player X Wins!" BorderPane.alignment="CENTER" textFill="WHITE">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
