<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="450.0" prefWidth="600.0" style="-fx-background-image: url(&quot;mcbg.jpg&quot;);" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="551.0" prefWidth="894.0" style="-fx-spacing: 10px;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="playButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" text="Play" textAlignment="CENTER" />
            <Button fx:id="profileButton" mnemonicParsing="false"  prefHeight="25.0" prefWidth="85.0" text="Profiles" textAlignment="CENTER" />
            <Button fx:id="settingsButton" mnemonicParsing="false"  prefHeight="25.0" prefWidth="85.0" text="Settings" textAlignment="CENTER" />
            <Button fx:id="quitButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" text="Quit" textAlignment="CENTER" />
         </children>
      </VBox>
   </center>
   <top>
      <VBox alignment="CENTER" prefHeight="101.0" prefWidth="525.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="messageOfDay" alignment="CENTER_RIGHT" contentDisplay="CENTER" text="Message of the day" textFill="WHITE" />
            <ImageView fitHeight="88.0" fitWidth="338.0">
               <image>
                  <Image url="Labyrinth.png" />
               </image>
            </ImageView>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </top>
</BorderPane>
